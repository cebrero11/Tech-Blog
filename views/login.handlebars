{{!-- Login Form --}}
<div class="row">
  <div class="col-md-6 box mb-0">
    <h2>login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="name-login">name:</label>
        <input class="input" type="text" id="name-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary button is-light" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6 box">
    <h2>signup</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary button is-light" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
