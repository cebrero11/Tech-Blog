<div class="row">
  <div class="col-auto">
    <h2>welcome, {{name}}.</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>create a post:</h3>

    <form class="form new-post-form box">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <textarea class="input" id="post-title" name="post-title"></textarea>
        <label for="post-content">Content:</label>
        <textarea class="input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary button is-light">create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>All posts:</h3>
    <div class="box">
    {{#each posts as |post|}}
    <div class="box">
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/idea/{{post.id}}">{{post.post_title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger button is-danger is-light" data-id="{{post.id}}">delete</button>
      </div>
    </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
</div>
<script src="./js/dashboard.js"></script>
